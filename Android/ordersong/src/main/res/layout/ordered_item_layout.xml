<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_61_dp"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/song_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_14"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_14_dp"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/music_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginVertical="@dimen/dimen_8_dp"
        android:background="@drawable/song_signal"
        android:visibility="gone"
        />

    <com.netease.yunxin.kit.common.ui.widgets.ContactAvatarView
        android:id="@+id/song_cover"
        android:layout_width="@dimen/dimen_45_dp"
        android:layout_height="@dimen/dimen_45_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_39_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        android:layout_marginVertical="@dimen/dimen_8_dp" />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_16"
        android:maxWidth="@dimen/dimen_120_dp"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_92_dp"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:layout_gravity="center_vertical"
        tools:text="孤勇者"/>

    <com.netease.yunxin.kit.common.ui.widgets.ContactAvatarView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/dimen_18_dp"
        android:layout_height="@dimen/dimen_18_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_92_dp"
        android:layout_marginTop="@dimen/dimen_34_dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="100dp"
        android:layout_height="@dimen/dimen_18_dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#999999"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxWidth="@dimen/dimen_100_dp"
        android:layout_marginStart="@dimen/dimen_114_dp"
        android:layout_marginTop="@dimen/dimen_34_dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/song_size"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_18_dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_12"
        android:textColor="#999999"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/user_name"
        android:layout_marginStart="5dp"
        android:layout_marginTop="@dimen/dimen_34_dp"
        android:layout_gravity="center_vertical" />




    <ImageView
        android:id="@+id/order_cancel"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toTopOf="@+id/song_singing"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dimen_21_dp"
        android:src="@drawable/icon_song_cancel"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/song_singing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_12"
        android:textColor="#337EFF"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="4dp"
        android:layout_marginEnd="@dimen/dimen_21_dp"
        android:layout_gravity="center_vertical"
        android:text="@string/song_state_playing"
        android:visibility="gone"
        />



</androidx.constraintlayout.widget.ConstraintLayout>