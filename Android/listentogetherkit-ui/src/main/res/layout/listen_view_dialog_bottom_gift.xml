<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dialog_gift_list"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dialog_send_gift"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/listen_shape_dialog_gift_btn_bg"
        android:gravity="center"
        android:text="@string/listen_send"
        android:textColor="#ffffffff"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/rv_dialog_gift_list" />
</androidx.constraintlayout.widget.ConstraintLayout>