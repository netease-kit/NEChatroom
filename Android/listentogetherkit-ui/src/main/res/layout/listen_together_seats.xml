<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/listen_bg_seat"
        />

    <RelativeLayout
        android:id="@+id/ll_seats"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/listen_bg_two_seat"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lav_anchor_avatar_lottie_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:lottie_rawRes="@raw/voiceroom_avatar_wave"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lav_audience_avatar_lottie_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:lottie_rawRes="@raw/voiceroom_avatar_wave"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_wave_line"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/listen_wave_line"
            android:visibility="invisible"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content">
                <com.netease.yunxin.app.listentogether.widget.SeatView
                    android:id="@+id/seat_anchor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content">
                <com.netease.yunxin.app.listentogether.widget.SeatView
                    android:id="@+id/seat_audience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>